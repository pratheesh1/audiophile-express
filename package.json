{
  "name": "ecommerce-audio-store-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build:css": "postcss ./public/styles/tailwind.css -o ./public/styles/index.css && echo '\\033[1;92m>> tailwind css build completed!'",
    "start-dev": "nodemon index.js",
    "watch": "chokidar './views/**/**/**/**/**' './forms/**/**/**/**/**' './public/styles/tailwind.css' -c \"npm run build:css\"",
    "dev": "concurrently \"npm run build:css\" \"npm run watch\" \"npm run start-dev\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "hbs": "^4.1.2",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "signale": "^1.4.0",
    "wax-on": "^1.2.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.4.0",
    "postcss-cli": "^9.0.2",
    "tailwindcss": "^2.2.19"
  },
  "signale": {
    "displayBadge": true,
    "displayFilename": true,
    "displayLabel": true,
    "displayTimestamp": true,
    "uppercaseLabel": true
  }
}
