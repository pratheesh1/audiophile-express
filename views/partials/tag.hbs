<div class="p-2 m-2 rounded-md bg-blue-100 relative">
    <h3 class="font-bold mb-2 text-gray-800">Value: {{this.tagValue}}</h3>
    <div class="bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-blue-500 mb-4 text-sm font-bold">
            Name: {{this.tagName}}
        </h3>
        <p class="text-gray-700"> Description:
            {{#if this.description}}
            {{this.description}}
            {{else}}
            No description
            {{/if}}
        </p>
    </div>
    <div class="absolute top-1 right-1 bg-red-300 px-2 rounded-full" role="button">
        <a href="/products/delete/{{productId}}/{{this.id}}" class="text-gray-800">
            <i class="fas fa-times"></i>
        </a>
    </div>
</div>