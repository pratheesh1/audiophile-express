{{#extends 'base'}}

{{#block 'title'}}
Add Tags
{{/block}}

{{#block 'content'}}

<div class="bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-white min-h-screen">
    <div class="md:grid md:grid-cols-12 md:gap-6">
        <div class="md:col-start-2 md:col-span-3 p-3 lg:p-10">
            <div class="px-4 sm:px-0">
                <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Adding custom tags for:
                    {{product.name}}
                </h3>
                <hr class="hidden: md:visible border border-gray-600 mt-3" />
                <p class="mt-1 text-xs text-gray-600 dark:text-white">
                    Fields marked with * are required.
                </p>
                <p class="mt-5 text-sm text-gray-600 dark:text-white">
                    Adding custom tags will help your products reach more customers when they search.
                    <br />This form allows you to add custom tags to the product.
                </p>
            </div>
        </div>
        <div class="md:col-start-5 md:col-end-12 lg:col-end-10 p-3 lg:-10">
            <form action="/products/add/tag/{{id}}" method="post">
                <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                {{!-- add tags form --}}
                {{{form}}}

                {{!-- image --}}
                <div class="flex justify-end">
                    <button
                        class="m-4 w-1/2 md:w-1/3 lg:w-1/4 bg-teal-500 hover:bg-teal-400 text-white hover:text-black py-2 rounded-full transition duration-100">Add
                        New
                        Tag
                    </button>
                </div>
            </form>
            <div lass="md:col-start-5 md:col-end-12 lg:col-end-10 p-3 lg:-10">
                <div>

                    {{#if tags.length}}
                    {{#each tags}}
                    {{>tag this productId=../id}}
                    {{/each}}
                    {{/if}}

                </div>
                <div class="flex justify-between">
                    <a href='/products/home'
                        class="m-4 w-1/2 md:w-1/3 lg:w-1/4 bg-blue-500 hover:bg-blue-400 text-white hover:text-black py-2 rounded-full transition duration-100 flex justify-center">Cancel
                    </a>
                    <a href='/products/view/{{id}}'
                        class="m-4 w-1/2 md:w-1/3 lg:w-1/4 bg-green-500 hover:bg-green-400 text-white hover:text-black py-2 rounded-full transition duration-100 flex justify-center">Done
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{{/block}}

{{#block "scripts"}}

{{/block}}


{{/extends}}